<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:defaultValue="5"
        android:dialogMessage="Correction limit"
        android:dialogTitle="Correction limit"
        android:key="correction_max"
        android:numeric="integer"
        android:summary="Correction limit"
        android:title="Correction limit" />

    <PreferenceCategory
        android:key="first_category"
        android:title="Flight Console API" >
        <EditTextPreference
            android:defaultValue="http://192.168.1.4:3000/configuration"
            android:dialogMessage="Provide API url"
            android:dialogTitle="Config API url"
            android:key="api_url"
            android:summary="Config API url"
            android:title="Config API url" />
        <EditTextPreference
            android:defaultValue="500"
            android:dialogMessage="API Connection timeout"
            android:dialogTitle="API Connection timeout"
            android:key="timeout_connection"
            android:numeric="integer"
            android:summary="API Connection timeout"
            android:title="API Connection timeout" />
        <EditTextPreference
            android:defaultValue="500"
            android:dialogMessage="API Socket timeout"
            android:dialogTitle="API Socket timeout"
            android:key="timeout_socket"
            android:numeric="integer"
            android:summary="API Socket timeout"
            android:title="API Socket timeout" />
    </PreferenceCategory>

</PreferenceScreen>